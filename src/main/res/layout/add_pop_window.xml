<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/add_bar"
        android:layout_width="match_parent"
        android:layout_height="30dp"

        android:background="@color/blue_FF4DF0FF">
        <TextView
            android:id="@+id/add_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_title"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_margin="7dp"
            android:textAlignment="center"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/add_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_bar"
        android:layout_margin="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/add_name_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="姓    名："/>
            <EditText
                android:id="@+id/add_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/add_date_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="时    间："/>
            <EditText
                android:id="@+id/add_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="none"
                android:textIsSelectable="false"
                android:cursorVisible="false"
                android:focusableInTouchMode="false"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/add_model_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="车    型："/>
            <EditText
                android:id="@+id/add_model"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/add_from_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="出发地："/>
            <EditText
                android:id="@+id/add_from"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/add_to_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="目的地："/>
            <EditText
                android:id="@+id/add_to"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/add_price_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="价    格："/>
            <EditText
                android:id="@+id/add_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="number"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/add_paied_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="已付款："/>
            <CheckBox
                android:id="@+id/add_paied"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/add_submit"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_body"
        android:text="确定"/>
</RelativeLayout>