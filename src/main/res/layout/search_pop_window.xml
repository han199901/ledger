<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="30dp"

        android:background="@color/blue_FF4DF0FF">
        <TextView
            android:id="@+id/search_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_title"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_margin="7dp"
            android:textAlignment="center"/>
        <ImageView
            android:id="@+id/search_cancel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:src="@mipmap/cancel"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/search_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_bar"
        android:layout_margin="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/search_name_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="姓        名："/>
            <EditText
                android:id="@+id/search_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/search_start_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="开始时间："/>
            <EditText
                android:id="@+id/search_start"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="none"
                android:textIsSelectable="false"
                android:cursorVisible="false"
                android:focusableInTouchMode="false"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/search_end_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="结束时间："/>
            <EditText
                android:id="@+id/search_end"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="none"
                android:textIsSelectable="false"
                android:cursorVisible="false"
                android:focusableInTouchMode="false"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/search_submit"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_body"
        android:text="确定"/>
</RelativeLayout>